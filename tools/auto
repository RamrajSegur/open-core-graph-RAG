#!/bin/bash

# Open Core Graph RAG - Automation Script
# Usage: ./auto <command> [path]
# 
# Commands:
#   test [path]      - Run pytest on specified path (default: .)
#   build            - Build Docker container
#   launch           - Launch Docker container
#   stop             - Stop running Docker containers
#   fix              - Format code with black
#   lint             - Check linting with flake8
#   typecheck        - Type checking with mypy
#   all              - Build, launch, test, and fix all issues

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Project paths
PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DOCKER_COMPOSE_FILE="${PROJECT_ROOT}/docker/docker-compose.yml"

# Functions
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

# Check if Docker is installed
check_docker() {
    if ! command -v docker &> /dev/null; then
        log_error "Docker is not installed. Please install Docker first."
        exit 1
    fi
    
    if ! command -v docker-compose &> /dev/null; then
        log_error "docker-compose is not installed. Please install docker-compose first."
        exit 1
    fi
    
    log_success "Docker and docker-compose are available"
}

# Build Docker image
build_docker() {
    log_info "Building Docker image..."
    
    if [ ! -f "${DOCKER_COMPOSE_FILE}" ]; then
        log_error "docker-compose.yml not found at ${DOCKER_COMPOSE_FILE}"
        exit 1
    fi
    
    cd "${PROJECT_ROOT}"
    docker-compose -f "${DOCKER_COMPOSE_FILE}" build
    
    log_success "Docker image built successfully"
}

# Launch Docker containers
launch_docker() {
    log_info "Launching Docker containers..."
    
    cd "${PROJECT_ROOT}"
    docker-compose -f "${DOCKER_COMPOSE_FILE}" up -d
    
    log_success "Docker containers launched"
    
    # Wait for services to be ready
    log_info "Waiting for services to be ready..."
    sleep 5
    
    # Check if TigerGraph is healthy
    log_info "Checking TigerGraph health..."
    max_attempts=30
    attempt=0
    
    while [ $attempt -lt $max_attempts ]; do
        if docker-compose -f "${DOCKER_COMPOSE_FILE}" exec -T tigergraph curl -s http://localhost:9000/api/v2/health > /dev/null 2>&1; then
            log_success "TigerGraph is healthy"
            return 0
        fi
        
        attempt=$((attempt + 1))
        log_info "Health check attempt $attempt/$max_attempts..."
        sleep 2
    done
    
    log_warning "TigerGraph health check timed out, but containers may still be starting"
}

# Stop Docker containers
stop_docker() {
    log_info "Stopping Docker containers..."
    
    cd "${PROJECT_ROOT}"
    docker-compose -f "${DOCKER_COMPOSE_FILE}" down
    
    log_success "Docker containers stopped"
}

# Run tests
run_tests() {
    local test_path="${1:-.}"
    
    log_info "Running tests for: $test_path"
    
    cd "${PROJECT_ROOT}"
    
    # Check if test path exists
    if [ ! -e "$test_path" ]; then
        log_error "Path does not exist: $test_path"
        exit 1
    fi
    
    # Run pytest
    if ! python -m pytest "$test_path" -v --tb=short; then
        log_error "Tests failed"
        exit 1
    fi
    
    log_success "All tests passed"
}

# Format code with black
fix_format() {
    log_info "Formatting code with black..."
    
    cd "${PROJECT_ROOT}"
    
    # Format src directory
    if [ -d "src" ]; then
        python -m black src --line-length 100
    fi
    
    # Format tests directory
    if [ -d "tests" ]; then
        python -m black tests --line-length 100
    fi
    
    # Format scripts directory
    if [ -d "scripts" ]; then
        python -m black scripts --line-length 100
    fi
    
    log_success "Code formatted with black"
}

# Run linting with flake8
lint_code() {
    log_info "Linting code with flake8..."
    
    cd "${PROJECT_ROOT}"
    
    local lint_failed=0
    
    # Lint src directory
    if [ -d "src" ]; then
        if ! python -m flake8 src --max-line-length=100 --ignore=E203,W503; then
            lint_failed=1
        fi
    fi
    
    # Lint tests directory
    if [ -d "tests" ]; then
        if ! python -m flake8 tests --max-line-length=100 --ignore=E203,W503; then
            lint_failed=1
        fi
    fi
    
    # Lint scripts directory
    if [ -d "scripts" ]; then
        if ! python -m flake8 scripts --max-line-length=100 --ignore=E203,W503; then
            lint_failed=1
        fi
    fi
    
    if [ $lint_failed -eq 1 ]; then
        log_error "Linting found issues (see above)"
        return 1
    fi
    
    log_success "All linting checks passed"
}

# Type checking with mypy
type_check() {
    log_info "Running type checks with mypy..."
    
    cd "${PROJECT_ROOT}"
    
    local type_check_failed=0
    
    # Type check src directory
    if [ -d "src" ]; then
        if ! python -m mypy src --ignore-missing-imports --no-error-summary 2>&1 | grep -q "error:"; then
            :  # No errors
        else
            log_warning "Type checking found issues in src (these are warnings, not critical)"
        fi
    fi
    
    # Type check tests directory
    if [ -d "tests" ]; then
        if ! python -m mypy tests --ignore-missing-imports --no-error-summary 2>&1 | grep -q "error:"; then
            :  # No errors
        else
            log_warning "Type checking found issues in tests (these are warnings, not critical)"
        fi
    fi
    
    log_success "Type checking completed"
}

# Run all quality checks
run_all_quality_checks() {
    log_info "Running all quality checks..."
    
    # Format
    fix_format
    
    # Lint
    if ! lint_code; then
        log_error "Linting failed"
        return 1
    fi
    
    # Type check (warnings only)
    type_check
    
    log_success "All quality checks completed"
}

# Run tests inside Docker container
run_tests_in_docker() {
    local test_path="${1:-.}"
    
    log_info "Running tests inside Docker container for: $test_path"
    
    cd "${PROJECT_ROOT}"
    
    # Make sure containers are running
    if ! docker-compose -f "${DOCKER_COMPOSE_FILE}" ps | grep -q "tigergraph"; then
        log_info "TigerGraph container not running, launching..."
        launch_docker
    fi
    
    # Run pytest inside the container
    docker-compose -f "${DOCKER_COMPOSE_FILE}" exec -T app python -m pytest "$test_path" -v --tb=short
    
    if [ $? -eq 0 ]; then
        log_success "All tests passed in Docker"
    else
        log_error "Tests failed in Docker"
        exit 1
    fi
}

# Run interactive shell in Docker container
run_interactive() {
    log_info "Starting interactive shell in Docker container..."
    
    cd "${PROJECT_ROOT}"
    
    # Make sure containers are running
    if ! docker-compose -f "${DOCKER_COMPOSE_FILE}" ps | grep -q "app"; then
        log_info "App container not running, launching..."
        launch_docker
    fi
    
    # Start interactive bash shell
    log_info "You are now in the Docker container. Type 'exit' to quit."
    docker-compose -f "${DOCKER_COMPOSE_FILE}" exec app /bin/bash
}

# Main command dispatcher
main() {
    local command="${1:-help}"
    local path="${2:-.}"
    
    # Validate environment
    check_docker
    
    case "$command" in
        build)
            build_docker
            ;;
        launch)
            launch_docker
            ;;
        stop)
            stop_docker
            ;;
        test)
            run_tests "$path"
            ;;
        test-docker)
            run_tests_in_docker "$path"
            ;;
        run)
            run_interactive
            ;;
        fix)
            fix_format
            ;;
        lint)
            lint_code
            ;;
        typecheck)
            type_check
            ;;
        quality)
            run_all_quality_checks
            ;;
        all)
            log_info "Running full pipeline: build, launch, quality checks, and tests"
            build_docker
            launch_docker
            run_all_quality_checks
            run_tests_in_docker "$path"
            log_success "Full pipeline completed successfully"
            ;;
        dev)
            log_info "Starting development environment"
            build_docker
            launch_docker
            log_success "Development environment ready"
            log_info "Run './auto test' to run tests"
            log_info "Run './auto fix' to format code"
            log_info "Run './auto quality' to run all checks"
            ;;
        help|"")
            cat << EOF
${BLUE}Open Core Graph RAG - Automation Script${NC}

${GREEN}Usage:${NC}
  ./auto <command> [path]

${GREEN}Commands:${NC}
  ${YELLOW}build${NC}              Build Docker container
  ${YELLOW}launch${NC}             Launch Docker containers
  ${YELLOW}stop${NC}               Stop Docker containers
  ${YELLOW}test${NC} [path]        Run tests on specified path (default: .)
                     Example: ./auto test tests/
                     Example: ./auto test tests/test_graph_store.py
  ${YELLOW}test-docker${NC}        Run tests inside Docker container (requires running containers)
  ${YELLOW}run${NC}                 Run interactive bash shell in Docker container
  ${YELLOW}fix${NC}                Format code with black
  ${YELLOW}lint${NC}               Check code with flake8
  ${YELLOW}typecheck${NC}          Type checking with mypy
  ${YELLOW}quality${NC}            Run format + lint + typecheck
  ${YELLOW}all${NC}                Full pipeline: build + launch + quality + test
  ${YELLOW}dev${NC}                Setup development environment (build + launch)
  ${YELLOW}help${NC}               Show this help message

${GREEN}Examples:${NC}
  ./auto build                    # Build Docker image
  ./auto launch                   # Launch Docker containers
  ./auto test                     # Run all tests locally
  ./auto test tests/              # Run tests in tests/ directory
  ./auto test-docker tests/       # Run tests inside Docker container
  ./auto run                      # Interactive shell in Docker
  ./auto fix                      # Format all code
  ./auto lint                     # Check linting
  ./auto typecheck                # Type checking
  ./auto quality                  # Run all quality checks
  ./auto all                      # Full pipeline
  ./auto dev                      # Setup dev environment

${GREEN}Development Workflow:${NC}
  1. ./auto dev                   # Start development environment
  2. ./auto fix                   # Format your code
  3. ./auto test                  # Run tests
  4. ./auto quality               # Check code quality
  5. ./auto test-docker           # Run tests in Docker
EOF
            ;;
        *)
            log_error "Unknown command: $command"
            echo ""
            ./auto help
            exit 1
            ;;
    esac
}

# Run main function
main "$@"
